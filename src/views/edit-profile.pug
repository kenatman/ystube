extends base.pug


block content 
  if errorMessage 
    h2=errorMessage
  img(src="/"+loggedInUser.avatarUrl, width="100", height="100")  
  form(method="POST", enctype="multipart/form-data")
    label(for="avatar") AVATAR  
    input(id="avatar", name="avatar", type="file", accept="image/*")
    input(name="email", type="email", required, placeholder="put your email", value=loggedInUser.email)
    input(name="username", type="text", required, placeholder="put your username",value=loggedInUser.username)
    input(name="name", type="text", required, placeholder="put your name",value=loggedInUser.name)
    input(name="location", type="text", placeholder="put your location",value=loggedInUser.location)
    input(type="submit", value="EDIT PROFILE")
  if !loggedInUser.socialOnly
    hr
    a(href="change-password") CHANGE PASSWORD &rarr;