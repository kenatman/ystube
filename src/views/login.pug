extends base

block content 
  if(errorMessage)
    span=errorMessage
  form(method="POST")
    input(name="username", type="text", required, placeholder="put your username")
    input(name="password", type="password", required, placeholder="put your password")
    input(type="submit", value="LOGIN")
    include partials/social-login
  .auth-switch
    span Wanna create a new account? 
    a(href="/join") Create now &rarr;