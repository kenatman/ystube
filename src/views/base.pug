doctype html
html(lang="en")
  head 
    title #{pageTitle} | YStube
    link(rel="stylesheet" href="https://unpkg.com/mvp.css")
  body 
    header
      if fakeUser.userName 
        small hello #{fakeUser.userName}
      nav 
        ul 
          if fakeUser.loggedIn
            li
              a(href="/login") LOGOUT 
          else
            li 
              a(href="/logout") LOGIN
      h1=pageTitle
    main
      block content
  include partials/footer.pug