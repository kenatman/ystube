extends base

block content 
  if(errorMessage)
    span=errorMessage
  form(method="POST")
    input(name="email", type="email", required, placeholder="put your email" )
    input(name="username", type="text", required, placeholder="put your username")
    input(name="password", type="password", required, placeholder="put your password")
    input(name="password2", type="password", required, placeholder="confirm password")
    input(name="name", type="text", required, placeholder="put your name")
    input(name="location", type="text", placeholder="put your location")
    input(type="submit", value="JOIN")
  br
  div 
    span Already have an account? 
    a(href="/login") Login now &rarr;